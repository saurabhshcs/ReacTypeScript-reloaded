{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ES6",
        "strict": true,
        "noEmit": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "jsx": "react",
        "sourceMap": true,
        "plugins": [{"name": "typescript-plugin-css-modules"}]
    },
    "include": ["./src/**/*"],
}